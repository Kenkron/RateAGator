<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <Button
            android:id="@+id/goToCommentsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:onClick="goToComments"
            android:text="Comments" />

    <TextView
        android:id="@+id/professorEvalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Professor"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/courseEvalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Evaluations"
        android:textAppearance="?android:attr/textAppearanceLarge" />

     <RelativeLayout 
    android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
   	android:layout_alignParentBottom="true">
   	
    <include  layout="@layout/bottom_buttons" android:id="@+id/bottom_buttons" />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" 
        android:layout_marginBottom="65dip" >

        <LinearLayout 
            android:id="@+id/evaluationFieldList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
  </RelativeLayout>
</LinearLayout>